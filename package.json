{
  "name": "limelight",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
