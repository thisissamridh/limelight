    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "prettier": "^2.5.1",
    "ts-mocha": "^9.0.2",
    "turbo": "latest",
    "typescript": "^4.3.5"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
